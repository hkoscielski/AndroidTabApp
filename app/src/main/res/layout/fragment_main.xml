<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hubson.swim_zad4cz2.main_activity_fragments.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextClock
            android:id="@+id/timeClock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:format12Hour="hh:mm:ss"
            android:layout_weight="0.5"
            android:gravity="left"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextClock
            android:id="@+id/dateClock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:format24Hour="dd.MM.yyyy"
            android:layout_weight="0.5"
            android:gravity="right"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/lambo"
            android:layout_above="@+id/authorTv"/>

        <TextView
            android:id="@+id/authorTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/author_name"
            android:textStyle="bold"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>
